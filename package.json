{
  "name": "nightwatch-commonjs-assert",
  "version": "1.0.0",
  "description": "nightwatch end-to-end test automation boilerplate project. Using commonjs and assert.",
  "scripts": {
    "lint": "npx eslint --ext .js ./ --fix",
    "test": "npx nightwatch",
    "test-ci": "npx nightwatch -c nightwatch-ci.json"
  },
  "keywords": [
    "nightwatch",
    "commonjs",
    "boilerplate",
    "example"
  ],
  "author": "Girma Nigusse <xgirma@gmail.com> (https://github.com/xgirma)",
  "license": "MIT",
  "devDependencies": {
    "chromedriver": "79.0.3",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.1",
    "lint-staged": "9.5.0",
    "nightwatch": "1.3.4",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
